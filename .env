# Amazon S3 configuration for exports
S3_BUCKET_NAME=
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=
S3_PATH_PREFIX=

# Akamai cache configuration
AKAMAI_USER=email@ctacorp.com
AKAMAI_PASSWORD=akamaipassword
AKAMAI_BASE_URI=https://api.ccu.akamai.com/ccu/v2/queues/default
AKAMAI_DOMAIN=staging
# AKAMAI_DOMAIN=production

# public DNS for public and admin apps
APP_PUBLIC_HOST_PORT=public:8080
APP_ADMIN_HOST_PORT=admin:80

# Rails configuration options.
# RAILS_COOKIE_TOKEN is required for the application to work.  A new cookie
# token can be generated using `bundle exec rake secret`
RAILS_ENV=development
RAILS_COOKIE_TOKEN=hex string of 30+ characters

# Database configuration options
MYSQL_DB_HOST=mysql
MYSQL_DB_PORT=3306
MYSQL_DB_NAME=comment_tool_app_development
MYSQL_DB_USER=root
MYSQL_DB_PASS=

ELASTICSEARCH_HOST=elasticsearch
ELASTICSEARCH_PORT=9200

MONGO_DB_HOST=mongo
MONGO_DB_PORT=27017
MONGO_DB_NAME=comment_tool_reporting_development
MONGO_DB_USER=
MONGO_DB_PASS=

REDIS_HOST_PORT=redis:6379
REDIS_EXPIRE=86400

# LDAP Authentication configuration options
# Required only if SKIP_LDAP_AUTHENTICATION=false
LDAP_HOST=test
LDAP_PORT=test
LDAP_BASE=test
LDAP_UID_NAME=test
LDAP_USER_GROUP=test
LDAP_ADMIN_USER=test
LDAP_ADMIN_PASS=test
SKIP_LDAP_AUTHENTICATION=true

# Rails mailer configuration options
MAILER_HOST=example.com
SMTP_ADDRESS=smtp.example.com
SMTP_PORT=27
SMTP_DOMAIN=example.com
SMTP_USER=smtp_user_name
SMTP_PASS=super_secure_password
SMTP_AUTH=login
