<div>
  <div id="saved_searches">
    <div>Saved Searches</div>
    <% version.saved_searches.each do |saved_search| %>
      <div>
        <%= link_to saved_search.name, survey_responses_path(saved_search.query_params) %>
        <%= link_to "(Remove)",
          survey_survey_version_saved_search_path(version.survey, version, saved_search),
          method: :delete, confirm: "Are you sure?"
        %>
      </div>
    <% end %>
  </div>
  <%= link_to "Save Search", "javascript: void(0);", class: "managed js-saveSearch" %>
  <div id="saved_search_form" style="display: none">
    <%= form_for [version.survey, version, SavedSearch.new] do |f| %>
      <%= f.text_field :name %>
      <%= f.submit "Save" %>
    <% end %>
  </div>
</div>
