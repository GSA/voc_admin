<td class="<%= dfv.display_field.editable? ? 'editable' : '' %>" id="displayFieldValue_<%= dfv.id %>">
  <% if dfv.display_field.editable %>
    <%= image_tag("/images/edit.png", :alt=>"edit") %>
    <%= best_in_place dfv, :value, nil: '&nbsp;', display_as: :display_value, html_attrs: {size: 12}, activator: "#displayFieldValue_#{dfv.id}" , path: survey_survey_version_display_field_value_path(version.survey, version, dfv) %>
  <% else %>
    <%= dfv.display_value %>
  <% end %>
</td>
