<%= form_for @user, :remote => true do |f| %>
	<% if @user.errors.any? %>
		<div class="modalErrorBox">
			<p class="title"><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</p>
			<ul class="list">
				<% @user.errors.full_messages.each do |msg| %>
				  <li class="list"><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>

	<div id="surveys">
		<div class="left_side">
	    <%= f.label :f_name, "First Name: "%>
	  </div>
		<div class="right_side">
	    <%= f.text_field :f_name %>
	  </div>
	  <br />
		<div class="left_side">
	    <%= f.label :l_name, "Last Name: " %>
	  </div>
		<div class="right_side">
	    <%= f.text_field :l_name %>
	  </div>
		<br />
	  <div class="left_side">
	  	<%= f.label :email, "Email: " %>
	  </div>
	  <div class="right_side">
	  	<%= f.text_field :email %>
	  </div>
		<br />
		<% if @user.new_record? || @user == @current_user %>
			<div class="left_side">
			  <%= f.label :password, "Password: " %>
		  </div>
		  <div class="right_side">
		  	<%= f.password_field :password%>
		  </div>
		  <br />
		  <div class="left_side">
			  <%= f.label :password_confirmation, "Password Confirmation: " %>
		  </div>
		  <div class="right_side">
		  	<%= f.password_field :password_confirmation%>
		  </div>
		  <br />
		<% end -%>

	  <% if @current_user.admin? %>
			<div class="left_side">
				<%= f.label :role_id, "Role: " %>
			</div>
			<div class="right_side">
				<%= radio_button :user, :role_id, Role::ADMIN.id, :id => "admin_role", :onclick => "$('#sites_div').hide();" %><%= label_tag "admin_role", "Admin" %>
				<%= radio_button :user, :role_id, nil, :id => "user_role", :checked => @user.role.nil?, :onclick => "$('#sites_div').show()" %><%= label_tag "user_role", "User" %>
			</div>
			<div id="sites_div" class="<%= @user.role.nil? ? '' : 'displayNone'%>">
				<div class="left_side">
					<%= f.label :site_ids, "Sites:" %>
				</div>
				<div class="right_side">
		    	<%= f.collection_select :site_ids, Site.all, :id, :name, {width: 180}, multiple: true, id: "user_sites" %>
		  	</div>
		  	<br />
			</div>
	  <% end %>

		<div class="submitButton">
			<% if f.object.new_record? %>
				<%= f.submit "Create Site", :type => :image, :src=>"/images/create-user.png" %>
			<% else %>
				<%= f.submit "Edit Site", :type => :image, :src=>"/images/update-user.png" %>
			<% end %>
		</div>
	</div>
<% end %>
