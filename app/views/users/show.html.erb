<h1>User Details</h1>
<%= flash_messages(flash) %>

<div id="showpage">
	<div class="left_side">
		Name:
	</div>
	<div class="right_side">
		<p><%= @user.f_name %> <%= @user.l_name %></p>
	</div>
	<br />
	<div class="left_side">
		Email:
	</div>
	<div class="right_side">
		<p><%= @user.email %></p>
	</div>
	<br />
	<div class="left_side">
		Role:
	</div>
	<div class="right_side">
		<p><%= @user.role.nil? ? 'User' : @user.role.name %></p>
	</div>
	<br />
	<% if @user.role.nil? %>
		<div class="right_side">
  		Sites:
  	</div>
  	<div class="left_side">
	    <% @user.sites.each do |site| %>
	    	<%= site.name %>
	    <% end %>
  	</div>
	<% end %>
</div>

<div class="page-nav">
  <%= link_to image_tag('edit.png', :alt=>"edit"), edit_user_path(@user) %>
  <%= link_to "View All Users", users_path, :class=>"manage" %>
</div>
