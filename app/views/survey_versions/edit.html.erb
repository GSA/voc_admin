<p class="pageTitle">Editing <%= @survey.name %> version <%= "#{@survey_version.major}.#{@survey_version.minor}" %></p>

<% javascript 'survey_builder.js' %>

<div class="pageNavEdit-upper">
  <p><%= link_to 'View All Versions', survey_survey_versions_path(@survey), :class=>"pageNavEdit" %></p>
  <p class="right"><%= link_to "Preview Survey", survey_survey_version_path(@survey, @survey_version), :class=>"pageNavEdit" %></p>
  <p class="right"><%= link_to 'Publish', publish_survey_survey_version_path(@survey, @survey_version), :confirm => 'Are you sure?', :class => "pageNavEdit" %></p>
</div>
<%= flash_messages(flash) %>

<div id="overlay_container">
  <div id="question_list">
  	<%= render :partial => 'question_list', :locals => {:survey_version => @survey_version, :survey => @survey} %>
  </div>
  <div id="spinner_overlay"><img src='/images/ajax-loader.gif' id='ajax_spinner_question_list' alt="Spinner" /></div>
</div>

<div class="pageNavEdit">
  <p><%= link_to 'View All Versions', survey_survey_versions_path(@survey), :class=>"pageNavEdit" %></p> 
	<p class="right"><%= link_to "Preview Survey", survey_survey_version_path(@survey, @survey_version), :class=>"pageNavEdit" %></p> 
  <p class="right"><%= link_to 'Publish', publish_survey_survey_version_path(@survey, @survey_version), :confirm => 'Are you sure?', :class => "pageNavEdit" %></p>
</div>

<div id="edit_modal" class="displayNone"></div>
