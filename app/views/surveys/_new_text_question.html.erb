<% text_question = @survey.newest_version.text_questions.build %>

<%= form_for [@survey.newest_version, text_question] do |f| %>
	<%= f.label :answer_type %>
	<%= f.radio_button :answer_type, "field", :id => "field_radio_button" %><%= f.label :field_radio_button, "Field" %>
	<%= f.radio_button :answer_type, "area", :id => "area_radio_button" %><%= f.label :are_radio_button, "Area" %>
	<br/>
	<% text_question.build_question_content if text_question.new_record? %>
	<%= f.fields_for :question_content do |builder| %>
		<%= builder.label :required %>
		<%= builder.check_box :required, {}, true, nil %>
		<br/>
    <%= builder.label :name %><br/>
		<%= builder.text_field :name%><br/>
		<%= builder.label :statement, "Question: "%><br/>
		<%= builder.text_field :statement%><br/>
	<% end -%>
	<br/>
	<% text_question.build_survey_element if text_question.new_record? %>
	<%= f.fields_for :survey_element do |builder| %>
		<%= builder.hidden_field :order, :value => @survey.newest_version.next_element_number %>
		<%#= builder.hidden_field :survey_version_id, :value => @survey.newest_version.id %>
	<% end %>
	
	<br/>
	<%= f.submit "Add Question" %>
<% end -%>

