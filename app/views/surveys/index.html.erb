<p class="pageTitle">All Survey's</p>
<div class="pageNav-upper">
	<%= link_to 'New Survey', new_survey_path, :class => "pageNav" %>
</div>
<%= flash_messages(flash) %>

<table id="surveyTable">
  <tr>
    <th class="col1">Name</th>
    <th class="col2">Description</th>
    <th colspan="5">Type</th>
  </tr>

<% @surveys.each do |survey| %>
  <tr class="<%= cycle('white','blue') %>">
    <td class="col1"><%= survey.name %></td>
    <td class="col2"><%= survey.description %></td>
    <td class="col3"><%= survey.survey_type.name.titleize %></td>
    <td class="col4-5"><%= link_to 'Edit', edit_survey_path(survey) %></td>
    <td class="col4-5"><%= link_to 'Versions', survey_survey_versions_path(survey)%></td>
    <td class="col4-5"><%= link_to 'Delete', survey, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<div class="pageNav">
	<%= link_to 'New Survey', new_survey_path, :class => "pageNav" %>
</div>
