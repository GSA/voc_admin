<%= form_for [@survey, @survey_version, @asset], :remote => true, :html => {:class => "question_edit_form"} do |f| %>

  <p class="modalTitle">Edit Snippet</p>
  <div class="validation_errors"></div>
  <div class="hidden_label"><%= f.label :snippet, "Snippet:" %></div>
  <%= f.text_area :snippet %>
  <br/>
	<br/>
  <div class="pageLink">
  	<%= link_to "Cancel", nil, :class => "cancelLink" %>
  	<%= f.submit "Update Snippet", :type => :image, :src=>"/images/update-snippet.png", :alt=>"Update Snippet" %>
  </div>
<% end -%>